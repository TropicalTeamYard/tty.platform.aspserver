FROM microsoft/aspnetcore:2.0 AS base
WORKDIR /app
EXPOSE 80

FROM microsoft/aspnetcore-build:2.0 AS build
WORKDIR /src
COPY ["wejh.platform.aspserver/wejh.platform.aspserver.csproj", "wejh.platform.aspserver/"]
RUN dotnet restore "wejh.platform.aspserver/wejh.platform.aspserver.csproj"
COPY . .
WORKDIR "/src/wejh.platform.aspserver"
RUN dotnet build "wejh.platform.aspserver.csproj" -c Release -o /app

FROM build AS publish
RUN dotnet publish "wejh.platform.aspserver.csproj" -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "wejh.platform.aspserver.dll"]