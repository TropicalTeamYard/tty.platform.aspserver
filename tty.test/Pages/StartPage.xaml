<Page x:Class="tty.test.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tty.test.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid>
        <Grid Width="400" Height="300">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBox x:Name="TextBox1" Margin="20"/>
            <PasswordBox x:Name="PasswordBox1" Grid.Row="1" Margin="20"/>
            <Button x:Name="ButtonLogin" Grid.Row="2" Margin="80,20" FontSize="16" Content="登录" Click="ButtonLogin_Click"/>
        </Grid>
    </Grid>
</Page>
